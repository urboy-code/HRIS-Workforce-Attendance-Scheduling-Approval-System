generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  MANAGER
  SUPERVISOR
  STAFF
  VIEWER
}

enum AttendanceType {
  IN
  OUT
}

enum ShiftType {
  MORNING
  EVENING
  NIGHT
}

enum RequestStatus {
  PENDING
  APPROVED
  REJECTED
}

model User {
  id            Int       @id @default(autoincrement())
  name          String 
  email         String    @unique
  password      String
  role          Role      @default(STAFF)
  position      String?
  created_at    DateTime  @default(now())
  updated_at    DateTime  @updatedAt

  attendances   Attendance[]
  requests      Request[]
  schedules        Schedule[]      @relation("AssignedSchedule")
  created_schedules Schedule[]     @relation("CreatedSchedule")
}

model Attendance {
  id          Int            @id @default(autoincrement())
  user_id     Int
  user        User           @relation(fields: [user_id], references: [id])
  type        AttendanceType
  timestamp   DateTime       @default(now())
  photo_path  String
  latitude    Float
  longitude   Float
  status      String
}

model Request {
  id            Int           @id @default(autoincrement())
  user_id       Int
  user          User          @relation(fields: [user_id], references: [id])
  type          String
  description   String        @db.Text
  file_upload   String?
  status        RequestStatus @default(PENDING)
  approver_role Role?
  created_at    DateTime      @default(now())
  updated_at    DateTime      @updatedAt
}

model Schedule {
  id          Int       @id @default(autoincrement())
  user_id     Int
  user        User      @relation("AssignedSchedule", fields: [user_id], references: [id])
  date        DateTime  @db.Date
  shift       ShiftType
  created_by  Int
  creator     User      @relation("CreatedSchedule", fields: [created_by], references: [id])
  is_approved Boolean   @default(false)
  created_at  DateTime  @default(now())

  @@unique([user_id, date])
}
